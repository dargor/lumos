#! /usr/bin/env python3
"""Quick theme switcher for Zed."""

import json
from pathlib import Path

settings = Path.home() / ".config" / "zed" / "settings.json"
zed = json.loads(settings.read_text())

old = zed["theme"]["mode"]
new = "light" if old == "dark" else "dark"

zed["theme"]["mode"] = new
settings.write_text(json.dumps(zed, ensure_ascii=False, indent=2) + "\n")

print(f"Switched from {old} to {new}")
